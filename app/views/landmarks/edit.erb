<h3>Edit Landmark: <%=@landmark.name%></h3>

<form action="/landmarks/<%=@landmark.id%>" method="post">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label for="name">Name:</label>
  <input type="text" name="landmark[name]" value="<%=@landmark.name%>" id="name">

  <br></br>
  <label for="year_completed">Year completed:</label>
  <input type="number" name="landmark[year_completed]" value="<%=@landmark.year_completed%>" id="year_completed">

  <br></br>
  <input type="submit" value="Edit Landmark">
</form>
